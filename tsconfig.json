{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*", "./src/*"]
        },

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitOverride": true,

        "incremental": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "preserveConstEnums": true
    },
    "include": ["src/**/*"]
}

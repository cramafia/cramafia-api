{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["google"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "require-jsdoc": "off",
        "no-cap": "off",

        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",

        "no-invalid-this": "off",
        "@typescript-eslint/no-invalid-this": "error"
    }
}
